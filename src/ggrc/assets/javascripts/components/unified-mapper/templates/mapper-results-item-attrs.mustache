<div class="flex-box flex-box-single">
  {{#each selectedColumns}}
    {{#add_to_current_scope thisColumn=this}}
    <div class="attr">
      {{#switch attr_type}}
        {{#case 'custom'}}
          <tree-item-custom-attribute {instance}="instance"
                                      {values}="instance.custom_attribute_values"
                                      {column}="thisColumn"
          ></tree-item-custom-attribute>
        {{/case}}

        {{#case 'role'}}
          <div class="roles attr-content">
            <tree-people-with-role-list-field {instance}="instance" {role}="attr_name"/>
          </div>
        {{/case}}

        {{#case 'default'}}
          {{#instance}}
            {{#if_equals attr_name 'title'}}
              <span class="title-attr">
                {{title}}
              </span>
            {{else}}
              {{> attrTemplate}}
            {{/if_equals}}
          {{/instance}}
        {{/case}}
      {{/switch}}
    </div>
    {{/add_to_current_scope}}
  {{/each}}
</div>
